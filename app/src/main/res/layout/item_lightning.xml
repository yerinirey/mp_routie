<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="12dp"
    android:paddingVertical="8dp">

    <!-- 번개 제목 -->
    <TextView
        android:id="@+id/tvLightningItemTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="번개 제목"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvJoinedBadge"
        app:layout_constraintHorizontal_bias="0" />

    <!-- 참여중 뱃지 -->
    <TextView
        android:id="@+id/tvJoinedBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="참여중"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_dark"
        android:paddingHorizontal="8dp"
        android:paddingVertical="2dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/tvLightningItemTitle"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 호스트 + 시간 간단 표기 -->
    <TextView
        android:id="@+id/tvLightningItemMeta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="호스트 / 시간"
        android:textSize="12sp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvLightningItemTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 참가자 요약 -->
    <TextView
        android:id="@+id/tvLightningItemParticipants"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="참가자: 0명"
        android:textSize="12sp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvLightningItemMeta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
