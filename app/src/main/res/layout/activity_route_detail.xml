<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 루트 제목 -->
    <TextView
        android:id="@+id/tvDetailRouteTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="루트 제목"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 루트 한 줄 소개 -->
    <TextView
        android:id="@+id/tvDetailRouteDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="4dp"
        android:text="루트 설명 없음"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvDetailRouteTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 출발 지점 -->
    <TextView
        android:id="@+id/tvDetailStart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="출발 지점:"
        app:layout_constraintTop_toBottomOf="@id/tvDetailRouteDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 도착 지점 -->
    <TextView
        android:id="@+id/tvDetailEnd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:text="도착 지점:"
        app:layout_constraintTop_toBottomOf="@id/tvDetailStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 이 루트로 번개 만들기 -->
    <Button
        android:id="@+id/btnCreateLightning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이 루트로 번개 만들기"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvDetailEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 지도 -->
    <com.kakao.vectormap.MapView
        android:id="@+id/detailMapView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnCreateLightning"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
