<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 루트 이름 -->
    <EditText
        android:id="@+id/etRouteTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="루트 이름을 입력하세요"
        android:padding="12dp"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/etRouteDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="루트 한 줄 소개 (예: 한강 야경 스팟 산책 코스)"
        android:inputType="text"
        android:layout_marginTop="8dp"
        android:padding="8dp" />
    <EditText
        android:id="@+id/et_start_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="출발 지점 별칭 (예: 숭실대 중문)"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:inputType="text" />

    <EditText
        android:id="@+id/et_end_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="도착 지점 별칭 (예: 서울대입구역)"
        android:padding="8dp"
        android:layout_marginTop="4dp"
        android:inputType="text" />

    <!-- 지도 -->
    <com.kakao.vectormap.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- 하단 정보 + 버튼들 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지도를 탭해서 출발 → 경유지 → 도착 순으로 루트를 찍어주세요."
            android:textSize="14sp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/tvPointCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지점: 0개" />

        <TextView
            android:id="@+id/tvStartPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="출발: 미지정" />

        <TextView
            android:id="@+id/tvEndPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="도착: 미지정" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/btnUndoPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="마지막 지점 취소" />

            <Button
                android:id="@+id/btnClearPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체 지점 초기화"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/btnSaveRoute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="루트 저장"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
