<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvCreateLightningTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="번개 만들기"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/etLightningTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="제목"
        app:layout_constraintTop_toBottomOf="@id/tvCreateLightningTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/etLightningPlace"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="장소"
        app:layout_constraintTop_toBottomOf="@id/etLightningTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/etLightningTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="시간 (예: 오늘 19:00)"
        app:layout_constraintTop_toBottomOf="@id/etLightningPlace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnLightningSubmit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="번개 등록"
        app:layout_constraintTop_toBottomOf="@id/etLightningTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
