<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvLinkedRoute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="연결된 루트 없음"
            android:textSize="14sp"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/etLightningTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="번개 제목"
            android:inputType="text"
            android:padding="8dp" />

        <EditText
            android:id="@+id/etLightningDescription"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="번개 설명 (시간, 준비물 등)"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:padding="8dp"
            android:layout_marginTop="12dp" />

        <!-- 모임 시간 선택 영역 -->
        <TextView
            android:id="@+id/tvLightningEventTimeLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="모임 시간"
            android:textSize="14sp"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/tvLightningEventTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="미정"
            android:textSize="14sp"
            android:padding="8dp" />

        <Button
            android:id="@+id/btnSelectEventTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="모임 날짜/시간 선택"
            android:layout_marginTop="4dp" />


        <EditText
            android:id="@+id/etLightningLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="모임 위치 소개 (예: 홍대입구역 9번 출구 앞)"
            android:inputType="text"
            android:padding="8dp"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnLightningSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="번개 생성"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
